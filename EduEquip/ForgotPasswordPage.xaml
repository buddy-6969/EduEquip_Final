<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduEquip.ForgotPasswordPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

 
            <Image Source="logo.png" 
                   HeightRequest="100" 
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,30,0,10"/>

            <Label Text="EduEquip"
                   FontAttributes="Bold"
                   FontSize="28"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True"
                   BorderColor="#E0E0E0">

                <VerticalStackLayout Spacing="20">
                    <Label Text="Forgot Password"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#34495E"
                           HorizontalOptions="Center"/>

                    <Label Text="Please enter your registered email address. We will send you a link to reset your password."
                           FontSize="14"
                           TextColor="#7F8C8D"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="Email"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>

                    <Border Stroke="#BDC3C7"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8">
                        <Entry x:Name="EmailEntry"
                               Placeholder="Enter your email"
                               Keyboard="Email"
                               BackgroundColor="White"
                               TextColor="Black"
                               HeightRequest="45"
                               Margin="10,0"/>
                    </Border>

                    <Button Text="Continue"
                            Clicked="OnContinueClicked"
                            BackgroundColor="#2E86DE"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
